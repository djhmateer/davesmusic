@using System.Reflection
@using DavesMusic.Controllers
@using StackExchange.Profiling;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DavesTopMusic</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="google-site-verification" content="jJMuQM2OgGXecOMN_JtPc7k9VzJHtW-dyeGW6ipNkDs"/>
    <meta name="msvalidate.01" content="6A4E3843C2B2EE76180B4881898530E1" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Top Tracks", "TopTracks", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <span class="navbar-text">
                    @Html.Partial("_SearchPartial")
                </span>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-right">
                    <li>@Html.ActionLink("Playlist Shuffler", "Me", "Profiles")</li>
                    <li>@*@Html.ActionLink("My Profile", "Me", "Profiles")*@</li>
                    <li>@*@Html.ActionLink("My Playlist", "MyPlaylist", "Home")*@</li>
                    <li>@*@Html.Partial("_SearchPartial")*@</li>
                </ul>

                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
<div class="container body-content">
    @RenderBody()
</div>
    <br />
    <div id="footer">
        <div class="container text-center">
            <p class="text-muted credit">&copy; @DateTime.Now.Year Daves Music (North Europe) Version: @Assembly.GetExecutingAssembly().GetLinkerTime() (UK Time)</p>
            <p class="text-muted credit">Other projects of mine: <a href="http://www.davesjokes.co.uk">davesjokes.co.uk</a>
            <a href="http://refactoring.azurewebsites.net">refactoring.azurewebsites.net</a>
            <a href="http://dmovies.azurewebsites.net">dmovies.azurewebsites.net</a>
            <p class="text-muted credit">
                <img src="~/Content/Images/Twitter_logo_blue.png" width="20" height="20"/><a href="https://twitter.com/dave_mateer"> https://twitter.com/dave_mateer</a>
                <img src="~/Content/Images/Octocat.png" width="20" height="20"/> <a href="https://github.com/djhmateer"> https://github.com/djhmateer</a>
                <img src="~/Content/Images/mail-icon-128.png" width="20" height="20" /> davemateer@gmail.com</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-60963984-1', 'auto');
        ga('send', 'pageview');
    </script>
    @MiniProfiler.RenderIncludes(position:RenderPosition.BottomRight)
</body>
</html>
